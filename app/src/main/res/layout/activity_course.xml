<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackGroundApp"
    tools:context=".activities.CourseActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="800dp">


        <LinearLayout
            android:id="@+id/up_linearLayout"
            android:layout_width="345dp"
            android:layout_height="142dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="800dp">

            <View
                android:id="@+id/view"
                android:layout_width="415dp"
                android:layout_height="wrap_content"
                android:background= "@color/com_facebook_button_background_color_selected"
                tools:layout_editor_absoluteX="5dp"
                tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/name_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="52dp"
                    android:text="Computer"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/view"
                    tools:ignore="MissingConstraints" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/details_linearLayout"
            android:layout_width="370dp"
            android:layout_height="295dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="216dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="800dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="26dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/baseline_school_black_24dp"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="3dp" />

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="334dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="Details:"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    tools:layout_editor_absoluteY="3dp"
                    tools:text="Details:" />

                <TextView
                    android:id="@+id/number_of_course"
                    android:layout_width="334dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="8dp"
                    android:text="Course Number:"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.304"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/detail"
                    tools:text="Course Number:" />

                <TextView
                    android:id="@+id/lecturer"
                    android:layout_width="337dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Lecturer:"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/num_of_semester"
                    tools:text="Lecturer:" />

                <TextView
                    android:id="@+id/num_of_semester"
                    android:layout_width="323dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Semester:"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.988"
                    app:layout_constraintStart_toEndOf="@+id/lecturer"
                    app:layout_constraintTop_toBottomOf="@+id/number_of_course"
                    tools:text="Semester:" />

                <TextView
                    android:id="@+id/day_in_week"
                    android:layout_width="318dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Day:"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/hours"
                    app:layout_constraintVertical_bias="0.741"
                    tools:text="Day:" />

                <TextView
                    android:id="@+id/hours"
                    android:layout_width="321dp"
                    android:layout_height="30dp"
                    android:text="Hours:"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    tools:layout_editor_absoluteY="201dp"
                    tools:text="Hours:" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="31dp"
                    android:layout_height="19dp"
                    app:srcCompat="@android:drawable/star_big_off"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="260dp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="31dp"
                    android:layout_height="19dp"
                    android:layout_marginBottom="40dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView3"
                    app:srcCompat="@android:drawable/star_big_off"
                    tools:layout_editor_absoluteX="1dp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="28dp"
                    android:layout_height="19dp"
                    android:layout_marginBottom="36dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView7"
                    app:srcCompat="@android:drawable/star_big_off"
                    tools:layout_editor_absoluteX="1dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="31dp"
                    android:layout_height="19dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    app:srcCompat="@android:drawable/star_big_off"
                    tools:layout_editor_absoluteX="0dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="31dp"
                    android:layout_height="19dp"
                    app:srcCompat="@android:drawable/star_big_off"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="43dp" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upload_file_linearLayout"
            android:layout_width="345dp"
            android:layout_height="183dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="457dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:minHeight="800dp">

                <TextView
                    android:id="@+id/upload_files"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="204dp"
                    android:text="Upload Files:"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="0dp" />

                <Button
                    android:id="@+id/btn_files"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:textStyle="bold"
                    android:background="@color/cardview_light_background"
                    tools:layout_editor_absoluteX="128dp"
                    tools:layout_editor_absoluteY="85dp"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/upload_files"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_file"
                    tools:layout_editor_absoluteY="0dp"
                    tools:ignore="MissingConstraints" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/list_people_course_linearLayout"
        android:layout_width="345dp"
        android:layout_height="183dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="457dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="283dp"
            android:minHeight="800dp">

            <TextView
                android:id="@+id/list_people_in_course"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="208dp"
                android:layout_marginStart="8dp"
                android:text="Participants:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_box"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />


        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/posts_in_course_linearLayout"
        android:layout_width="345dp"
        android:layout_height="183dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="457dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="283dp"
            android:minHeight="800dp">

            <TextView
                android:id="@+id/posts_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="252dp"
                android:layout_marginStart="8dp"
                android:text="Posts:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView14"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_note"
                tools:layout_editor_absoluteX="8dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>