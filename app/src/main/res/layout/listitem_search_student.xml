<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linearLayout_listitem_student">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_search_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:background="@drawable/baseline_account_circle_black_24dp" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_item_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student name"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/txt_item_student_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="17dp"/>

    </LinearLayout>


</LinearLayout>