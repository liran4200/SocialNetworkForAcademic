<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackGroundApp"
    tools:context=".fragments.RegisterFourthPageFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_select_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:paddingLeft="5dp"
        android:text="Select Your Courses"
        android:textSize="18sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rela_above"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/prg_loading_courses"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:progressTint="@color/colorWhite" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_selction"
            android:layout_width="match_parent"
            android:layout_height="551dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLoginButton"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Submit" />

    </RelativeLayout>

</LinearLayout>