<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackGroundApp"
    tools:context=".fragments.RegisterThirdPageFragment">


    <Spinner
        android:layout_gravity="center"
        android:id="@+id/spinner_academic"
        android:layout_width="293dp"
        android:layout_height="77dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"/>

    <Spinner
        android:id="@+id/spinner_studies"
        android:layout_width="293dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"/>

    <Spinner
        android:id="@+id/spinner_year"
        android:layout_width="293dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp" />

    <Button
        android:id="@+id/btn_next_select_courses"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorLoginButton"
        />

</LinearLayout>