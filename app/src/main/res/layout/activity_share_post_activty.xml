<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SharePostActivty">

    <RelativeLayout
        android:id="@+id/rel_bar"
        android:background="@color/colorBackGroundApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagView_back"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:background="@drawable/baseline_arrow_back_black_24dp"/>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBackGroundApp"
            android:text="Share"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/edt_posting"
        android:layout_below="@+id/rel_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What are you thinking about?"
        android:textSize="17sp"/>


</RelativeLayout>